{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "lib": [ "es2015" ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "app/src/types/*"
            ]
        }
    },
    "include": [
        "./app/src/**/*.ts",
        "./app/test/**/*.ts"
    ],
  "exclude": [ "./dist"]

}
